<?xml version="1.0" encoding="UTF-8"?>
<keymap>
	<binding key="0" action="help"/>
	<binding key="1" action="redo"/>
	<binding key="2" action="gotoPageNumber"/>
	<binding key="3" action="addBookmark"/>
	<binding key="4" action="previousTOCSection"/>
	<binding key="5" action="nextTOCSection"/>
	<binding key="6" action="showFootnotes"/>
	<binding key="7" action="toc"/>
	<binding key="8" action="hyperlinkNavStart"/>
	<binding key="9" action="dictionary"/>
	<binding key=" " action="menu"/>
	<binding key="XF86RotateWindows" action="showBookmarks"/>

	<!--binding key="Menu" action="preferences"/--> 
	<binding key="Return" action="preferences"/> 
	<binding key="Escape" action="cancel"/>

	<binding key="Next" action="pageForward"/>
	<binding key="Alt+Next" action="pageForward"/>
	<binding key="Prior" action="pageBackward"/>
	<binding key="Alt+Prior" action="pageBackward"/>
	<binding key="Down" action="pageForward"/>
	<binding key="Up" action="pageBackward"/>
	<binding key="Right" action="pageForward"/>
	<binding key="Left" action="pageBackward"/>

	<binding key="XF86AudioPlay" action="toggleIndicator"/>
	<binding key="XF86Search" action="fontSizeDialog"/>
</keymap>
